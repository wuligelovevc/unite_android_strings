<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"      
        android:background="@drawable/ab_bottom_transparent_light_zte">

         
    <LinearLayout
        android:id="@+id/tab_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_weight="1.0"
       >

        <ImageView
            android:id="@+id/tab_refresh_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/ic_refresh_normal" 
            android:gravity="center" 
            android:layout_gravity="center_horizontal"/>
        	
        <TextView
            android:id="@+id/tab_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="-8dip"
            android:text="@string/tab_refresh"
            android:textColor="@android:color/white" android:lines="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_weight="1.0"
        >

        <ImageView
            android:id="@+id/tab_more_img"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="2"
 	     android:background="@drawable/ic_viewmore_normal" 
            android:gravity="center" 
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tab_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-8dip"
            android:text="@string/tab_more"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>