<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:layout_alignParentTop="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/popup_dolby_view"
        android:paddingLeft="5dip"
        android:singleLine="true"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/popup_dolby_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/popup_camera_view"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:src="@drawable/ic_dolby" />

    <ImageView
        android:id="@+id/popup_camera_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/popup_lock_view"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:src="@drawable/ic_camera" />

    <ImageView
        android:id="@+id/popup_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:src="@drawable/ic_lock_on" />

</RelativeLayout>