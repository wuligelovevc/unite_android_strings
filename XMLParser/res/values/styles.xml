<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <style name="Holo.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:background">@drawable/actionbar_translucent</item>
        <item name="android:backgroundStacked">@null</item>
    </style>

    <style name="MediaButton.Play" parent="@android:style/MediaButton.Play">
        <item name="android:background">@null</item>
    </style>

    <!-- add by online begin -->
    <style name="list_name">
        <item name="android:textColor">#ff616161</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
    </style>

    <style name="pro_name">
        <item name="android:textColor">#ff616161</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="pro_time">
        <item name="android:textColor">#ffD3D3D3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="pro_from">
        <item name="android:textColor">#ffD3D3D3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_name">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="title_btn_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:background">#00000000</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="NoTitle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- add by online end -->

    <style name="Theme_NoStatusBar_FullScreen" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme_NoStatusBar_NoActionBar_FullScreen" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item> <!-- 全屏显示 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item> <!-- 去掉actionbar -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme_New_Actionbar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionModeBackground">@color/purple</item> <!-- actionMode模式下actionbar背景色 -->
        <item name="android:colorPrimaryDark">@color/statusbar_bg</item > <!-- 状态栏颜色 -->
        <item name="android:colorPrimary">@color/purple</item> <!-- actionbar背景颜色 -->
        <item name="android:textColorSecondary">@color/gray</item> <!-- 自定义actionbar SearchView颜色 -->
    </style>
    
    <style name="Theme_Movie_Actionbar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionModeBackground">@color/purple</item> <!-- actionMode模式下actionbar背景色 -->
        <item name="android:colorPrimary">@color/purple</item> <!-- actionbar背景颜色 -->
        <item name="android:textColorSecondary">@color/gray</item> <!-- 自定义actionbar SearchView颜色 -->
    </style>
    
    <style name="MovieSetting_Theme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/statusbar_bg</item > <!-- 状态栏颜色 -->
        <item name="android:colorPrimary">@color/purple</item> <!-- actionbar背景颜色 -->
    </style>

    <color name="darker_transparent">#C1000000</color>

    <style name="ActionBarTwoLinePrimary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"></style>

    <style name="ActionBarTwoLineSecondary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle"></style>

</resources>